<div class="column">
    <div class="card">
    <div class="card-content">
        <p class="title">
            <%= customer.name %>
        </p>
        <% if customer.image.present? %>
            <div class="card-image">
                <figure class="image">
                    <%= image_tag customer.image %>
                </figure>
            </div>
        <% end %>
        <p>Phone: <%= customer.phone %></p>
        <p>Email: <%= customer.email %></p>
        </div>
    </div>
</div>